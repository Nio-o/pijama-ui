{
  "name": "@pijama/box",
  "version": "0.0.0",
  "sideEffects": [
    "*.css"
  ],
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn run clean",
    "build": "yarn run build:esm && yarn run build:cjs && yarn run build:types",
    "build:esm": "node ../../infra/esbuild.js",
    "build:cjs": "node ../../infra/esbuild.js --cjs",
    "build:types": "tsc -p ./tsconfig.build.json --emitDeclarationOnly",
    "watch": "concurrently -k -g 'npm:watch:build:*'",
    "watch:build:esm": "node ../../infra/esbuild.js --watch",
    "watch:build:cjs": "node ../../infra/esbuild.js --watch --cjs",
    "watch:build:types": "tsc -p ./tsconfig.build.json --emitDeclarationOnly --watch --preserveWatchOutput"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@bem-react/classname": "^1.5.12",
    "@pijama/system": "workspace:*"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3"
  },
  "peerDependencies": {
    "react": ">=16.8"
  }
}
