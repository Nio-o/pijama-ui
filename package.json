{
  "name": "pijama",
  "version": "0.0.0",
  "author": "Evgeniy Malchenko",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-storybook": "build-storybook",
    "start-storybook": "start-storybook -p 6006",
    "build": "yarn workspaces foreach --parallel --topological-dev --no-private run build",
    "prewatch": "yarn run build",
    "watch": "yarn workspaces foreach -i --parallel --no-private run watch",
    "lint": "concurrently \"yarn:lint:check:*\" -g",
    "lint:check:eslint": "eslint --max-warnings 0 './packages/*/src/**'",
    "lint:check:prettier": "prettier --check './packages/*/src/**'",
    "lint:check:stylelint": "stylelint './packages/*/src/**/*.css'",
    "test": "jest",
    "test:watch": "jest --watch",
    "new:block": "yarn run plop Block",
    "new:mod": "yarn run plop Modifier"
  },
  "resolutions": {
    "@types/react": "^17.0.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-storysource": "^6.5.9",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^28.1.1",
    "@types/react": "^17.0.2",
    "chromatic": "^6.5.6",
    "concurrently": "^7.2.2",
    "esbuild": "^0.14.43",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-qiwi": "^1.17.1",
    "fast-glob": "^3.2.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jest-matchmedia-mock": "^1.1.0",
    "plop": "^3.1.1",
    "postcss": "^8.4.14",
    "postcss-mixins": "^9.0.2",
    "postcss-modules": "^4.3.1",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.7.1",
    "prettier-config-qiwi": "^1.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.3"
  },
  "packageManager": "yarn@3.2.1"
}
