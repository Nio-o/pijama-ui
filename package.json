{
  "name": "pijama",
  "version": "0.0.0",
  "author": "Evgeniy Malchenko",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clear": "rimraf ./ui",
    "bundle": "node ./infra/bundles.js",
    "build-storybook": "build-storybook",
    "build": "yarn run clear && concurrently \"yarn:build:*\" -g",
    "build:kit": "node ./infra/esbuild.js",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "yarn run clear && concurrently \"yarn:dev:*\"",
    "dev:kit": "node ./infra/esbuild.js --watch",
    "dev:kit:types": "tsc -p tsconfig.build.json --emitDeclarationOnly --watch",
    "dev:storybook": "start-storybook -p 6006",
    "lint": "concurrently \"yarn:lint:check:*\" -g",
    "lint:check:eslint": "eslint --max-warnings 0 ./src",
    "lint:check:prettier": "prettier --check ./src ./infra ./.storybook",
    "lint:check:stylelint": "stylelint ./src/**/*.css",
    "lint:fix": "eslint --fix ./src && prettier --write ./src ./infra ./.storybook",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "peerDependencies": {
    "@bem-react/classname": "^1.5.12",
    "@bem-react/core": "^3.0.8",
    "react": "^17.0.2"
  },
  "resolutions": {
    "@types/react": "^17.0.2"
  },
  "devDependencies": {
    "@bem-react/classname": "^1.5.12",
    "@bem-react/core": "^3.0.8",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-storysource": "^6.5.9",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^28.1.1",
    "@types/react": "^17.0.2",
    "chromatic": "^6.5.6",
    "concurrently": "^7.2.2",
    "esbuild": "^0.14.43",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-qiwi": "^1.17.1",
    "fast-glob": "^3.2.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "postcss": "^8.4.14",
    "postcss-mixins": "^9.0.2",
    "postcss-modules": "^4.3.1",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.7.1",
    "prettier-config-qiwi": "^1.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@qiwi/pijma-fonts": "^1.0.0"
  }
}
