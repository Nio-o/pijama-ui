{
  "extends": ["eslint-config-qiwi", "prettier"],
  "overrides": [
    {
      "files": ["*.tsx"],
      "rules": {
        "react/no-children-prop": "off"
      }
    }
  ],
  "rules": {
    "camelcase": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^\\u0000"],
          ["^react", "^@?\\w"],
          ["^@qiwi(/.*|$)"],
          ["^@qw(/.*|$)"],
          ["^\\."],
          ["^\\u0000\\."]
        ]
      }
    ],
    "unicorn/no-null": "off"
  }
}
