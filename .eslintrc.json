{
  "extends": ["eslint-config-qiwi", "prettier"],
  "overrides": [
    {
      "files": ["*.tsx"]
    }
  ],
  "rules": {
    "camelcase": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],
    "simple-import-sort/exports": "error",
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^react"],
          ["^@bem-react"],
          ["^@?\\w"],
          ["^pijama"],
          ["^\\.\\/_"],
          ["^\\."],
          ["\\.module\\.js$"]
        ]
      }
    ],
    "unicorn/no-null": "off"
  }
}
